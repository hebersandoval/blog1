<h1>All users</h1>
<%= link_to "Sign up", signup_path %>

<table>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%=link_to "Show", user_path(user) %></td>
      <td><%=link_to "Edit", edit_user_path(user) %></td>

      <td><% if current_user.admin? && !current_user?(user) %> | <%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" } %>
      <% end %></td>

    </tr>
  <% end %>
</table>
