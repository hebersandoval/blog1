<h1>Your post</h1>

<h1><%= @post.title %></h1>

<p><%= @post.content %></p>

<%= link_to "Edit post", edit_post_path(@post) %>
<p><%= link_to "Delete post", post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %></p>


<p><%= @post.content %></p>

<h2><%= @post.comments.count %> Comments</h2>

<h3>Add a comment:</h3>

<%= form_for([@post, @post.comments.build]) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :content %><br>
  <%= f.text_area :content %><br>

  <%= f.submit %>
<% end %>
